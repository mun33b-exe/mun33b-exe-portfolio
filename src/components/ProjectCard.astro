---
interface Props {
  name: string;
  description: string;
  image: string;
  techStack: string[];
  github?: string;
  live?: string;
  tier?: 1 | 2 | 3;
  playStoreStatus?: 'live' | 'closed-testing' | 'internal-testing';
}

const { name, description, image, techStack, github, live, tier = 2, playStoreStatus } = Astro.props;
const base = import.meta.env.BASE_URL;

// Fix image path to use base URL if it's a local path
const imageSrc = image.startsWith('/') ? `${base}${image.slice(1)}` : image;

// Tier-based styling
const isFlagship = tier === 1;
const isAcademic = tier === 3;

// Play Store status label
const playStoreLabel = playStoreStatus === 'live' 
  ? 'Play Store' 
  : playStoreStatus === 'closed-testing' 
    ? 'Play Store – Closed Testing' 
    : playStoreStatus === 'internal-testing' 
      ? 'Play Store – Internal Testing' 
      : null;
---

<article class={`group relative rounded-2xl overflow-hidden border transition-all duration-500 hover-lift ${
  isFlagship 
    ? 'bg-surface border-accent/20 hover:border-accent/50 shadow-lg shadow-accent/5' 
    : 'bg-surface border-surface hover:border-accent/30'
}`}>
  <!-- Badges Container -->
  <div class="absolute top-3 right-3 z-10 flex flex-col items-end gap-1.5">
    {isFlagship && (
      <span class="px-2.5 py-1 text-xs font-semibold bg-accent/90 text-background rounded-full">
        Featured
      </span>
    )}
    {playStoreLabel && (
      <span class="px-2 py-0.5 text-[10px] font-medium bg-surface/90 text-secondary border border-surface rounded-full backdrop-blur-sm">
        {playStoreLabel}
      </span>
    )}
  </div>

  <!-- Image -->
  <div class="relative aspect-video overflow-hidden">
    <img 
      src={imageSrc} 
      alt={name}
      class={`w-full h-full object-cover transition-transform duration-500 group-hover:scale-105 ${isAcademic ? 'opacity-80' : ''}`}
      loading="lazy"
    />
    
    <!-- Overlay -->
    <div class="absolute inset-0 bg-gradient-to-t from-surface via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300" />
  </div>

  <!-- Content -->
  <div class="p-6">
    <!-- Title -->
    <h3 class={`heading-sm mb-2 group-hover:text-accent transition-colors duration-300 ${
      isFlagship ? 'text-accent' : 'text-primary'
    }`}>
      {name}
    </h3>

    <!-- Description -->
    <p class={`body-sm text-secondary mb-4 ${isFlagship ? 'line-clamp-4' : 'line-clamp-2'}`}>
      {description}
    </p>

    <!-- Tech Stack -->
    <div class="flex flex-wrap gap-2 mb-4">
      {techStack.slice(0, isFlagship ? 6 : 4).map((tech) => (
        <span class={`px-3 py-1 text-xs font-medium rounded-full ${
          isFlagship 
            ? 'bg-accent/10 text-accent border border-accent/20' 
            : 'bg-button text-secondary'
        }`}>
          {tech}
        </span>
      ))}
    </div>

    <!-- Links -->
    <div class="flex items-center gap-3">
      {github && (
        <a 
          href={github}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 text-sm text-secondary hover:text-accent transition-colors duration-300"
          aria-label={`View ${name} on GitHub`}
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          <span>Source</span>
        </a>
      )}
      
      {live && (
        <a 
          href={live}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 text-sm text-secondary hover:text-accent transition-colors duration-300"
          aria-label={`View ${name} live`}
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
          <span>Live Demo</span>
        </a>
      )}
    </div>
  </div>

  <!-- Accent border on hover -->
  <div class={`absolute bottom-0 left-0 right-0 h-1 scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left ${
    isFlagship ? 'bg-accent' : 'bg-accent/70'
  }`} />
</article>
