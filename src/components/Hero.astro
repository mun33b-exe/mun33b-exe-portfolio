---
import SocialLinks from './SocialLinks.astro';
---

<section class="relative min-h-screen flex items-center pt-16 pb-24">
  <!-- Background Gradient -->
  <div class="absolute inset-0 bg-gradient-to-br from-background via-background to-surface/30 -z-10" />
  
  <!-- Accent Glow -->
  <div class="absolute top-1/2 right-1/4 w-96 h-96 bg-accent/10 rounded-full blur-3xl transform -translate-y-1/2 -z-10" />

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <!-- Left: Text Content -->
      <div class="order-2 lg:order-1 text-center lg:text-left">
        <!-- Status Badge -->
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-surface rounded-full mb-6 hero-fade" data-delay="0">
          <span class="w-2 h-2 bg-online rounded-full animate-pulse" />
          <span class="text-sm text-secondary">Available for opportunities</span>
        </div>

        <!-- Name -->
        <h1 class="heading-xl mb-4">
          <span class="hero-text block" data-delay="0.1">Hi, I'm</span>
          <span class="hero-text block text-gradient" data-delay="0.2">Muhammad Muneeb</span>
          <span class="hero-text block" data-delay="0.3">Ur Rehman</span>
        </h1>

        <!-- Role -->
        <p class="heading-sm text-accent mb-6 hero-fade" data-delay="0.4">
          Software Engineer
        </p>

        <!-- Tagline -->
        <p class="body-lg text-secondary max-w-lg mx-auto lg:mx-0 mb-8 hero-fade" data-delay="0.5">
          Building Innovative Applications with Flutter. Passionate about creating seamless mobile experiences with clean architecture and stunning UI.
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-wrap items-center justify-center lg:justify-start gap-4 mb-8 hero-fade" data-delay="0.6">
          <a 
            href="/projects" 
            class="inline-flex items-center gap-2 px-6 py-3 bg-accent text-background font-semibold rounded-lg hover:bg-accent/90 transition-all duration-300 hover-lift"
          >
            <span>View My Work</span>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
          <a 
            href="/assets/cv.pdf" 
            target="_blank"
            class="inline-flex items-center gap-2 px-6 py-3 bg-button text-primary font-semibold rounded-lg hover:bg-surface transition-all duration-300 border border-surface hover-lift"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <span>Download CV</span>
          </a>
        </div>

        <!-- Social Links -->
        <div class="hero-fade" data-delay="0.7">
          <SocialLinks size="lg" />
        </div>
      </div>

      <!-- Right: Profile Image -->
      <div class="order-1 lg:order-2 flex justify-center lg:justify-end">
        <div class="relative hero-image" data-delay="0.3">
          <!-- Glow Effect -->
          <div class="absolute inset-0 bg-accent/20 rounded-full blur-3xl scale-110 animate-pulse" />
          
          <!-- Image Container -->
          <div class="relative w-64 h-64 md:w-80 md:h-80 lg:w-96 lg:h-96 rounded-full overflow-hidden border-4 border-surface glow-accent">
            <img 
              src="/assets/images/profile/profile.png" 
              alt="Muhammad Muneeb Ur Rehman"
              class="w-full h-full object-cover"
              loading="eager"
            />
          </div>

          <!-- Decorative Ring -->
          <div class="absolute -inset-4 border-2 border-accent/20 rounded-full" />
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 hero-fade" data-delay="0.8">
    <div class="flex flex-col items-center gap-2 text-secondary">
      <span class="text-xs uppercase tracking-widest">Scroll</span>
      <div class="w-6 h-10 border-2 border-secondary/50 rounded-full flex justify-center">
        <div class="w-1 h-2 bg-secondary rounded-full mt-2 animate-bounce" />
      </div>
    </div>
  </div>
</section>

<script>
  import { initHeroAnimations } from './HeroAnimation.js';
  
  document.addEventListener('DOMContentLoaded', () => {
    initHeroAnimations();
  });
</script>
