---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import SectionHeader from '../components/SectionHeader.astro';
import SocialLinks from '../components/SocialLinks.astro';
---

<BaseLayout title="Contact | Muhammad Muneeb Ur Rehman">
  <Navbar />
  
  <main class="pt-24 pb-16 min-h-[80vh] flex items-center">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
      <!-- Header -->
      <SectionHeader 
        title="Get in Touch" 
        subtitle="Have a project in mind or just want to say hi? I'd love to hear from you!"
      />

      <div class="grid md:grid-cols-2 gap-12">
        <!-- Left: Contact Info -->
        <div class="space-y-8">
          <div class="p-6 bg-surface rounded-2xl border border-surface hover:border-accent/30 transition-colors duration-300">
            <div class="flex items-center gap-4 mb-4">
              <div class="w-12 h-12 flex items-center justify-center bg-accent/10 rounded-xl text-accent">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-primary">Email</h3>
                <p class="text-secondary text-sm">Best for project inquiries</p>
              </div>
            </div>
            <a 
              href="mailto:m.muneeburrehmann@gmail.com"
              class="inline-flex items-center gap-2 text-accent hover:underline"
            >
              m.muneeburrehmann@gmail.com
            </a>
          </div>

          <div class="p-6 bg-surface rounded-2xl border border-surface hover:border-accent/30 transition-colors duration-300">
            <div class="flex items-center gap-4 mb-4">
              <div class="w-12 h-12 flex items-center justify-center bg-accent/10 rounded-xl text-accent">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-primary">LinkedIn</h3>
                <p class="text-secondary text-sm">Let's connect professionally</p>
              </div>
            </div>
            <a 
              href="https://www.linkedin.com/in/mun33b-exe/"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 text-accent hover:underline"
            >
              linkedin.com/in/mun33b-exe
            </a>
          </div>

          <div class="p-6 bg-surface rounded-2xl border border-surface hover:border-accent/30 transition-colors duration-300">
            <div class="flex items-center gap-4 mb-4">
              <div class="w-12 h-12 flex items-center justify-center bg-accent/10 rounded-xl text-accent">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-primary">GitHub</h3>
                <p class="text-secondary text-sm">Check out my code</p>
              </div>
            </div>
            <a 
              href="https://github.com/mun33b-exe"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 text-accent hover:underline"
            >
              github.com/mun33b-exe
            </a>
          </div>
        </div>

        <!-- Right: CTA Card -->
        <div class="flex flex-col justify-center">
          <div class="p-8 bg-gradient-to-br from-surface to-button rounded-2xl border border-accent/20">
            <div class="w-16 h-16 flex items-center justify-center bg-accent/10 rounded-2xl text-accent mb-6">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
              </svg>
            </div>
            
            <h3 class="heading-md text-primary mb-4">
              Let's Build Something Great
            </h3>
            
            <p class="text-secondary body-md mb-6">
              I'm currently available for freelance projects and 
              full-time opportunities. Let's discuss how I can 
              help bring your ideas to life.
            </p>

            <a 
              href="mailto:m.muneeburrehmann@gmail.com"
              class="inline-flex items-center justify-center gap-2 w-full px-6 py-4 bg-accent text-background font-semibold rounded-lg hover:bg-accent/90 transition-all duration-300 hover-lift"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <span>Send an Email</span>
            </a>

            <div class="flex items-center justify-center gap-4 mt-6 pt-6 border-t border-surface">
              <span class="text-secondary text-sm">Or find me on:</span>
              <SocialLinks size="md" />
            </div>
          </div>

          <!-- Location Badge -->
          <div class="mt-6 text-center">
            <span class="inline-flex items-center gap-2 text-secondary text-sm">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              Based in Pakistan â€¢ Available worldwide
            </span>
          </div>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</BaseLayout>
