---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import SectionHeader from '../components/SectionHeader.astro';
import { experience } from '../data/experience';
---

<BaseLayout title="Experience | Muhammad Muneeb Ur Rehman">
  <Navbar />
  
  <main class="pt-24 pb-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <SectionHeader 
        title="Experience" 
        subtitle="My professional journey in software development"
      />

      <!-- Experience Cards -->
      <div class="space-y-8">
        {experience.map((exp, index) => (
          <article 
            class="group relative p-6 md:p-8 bg-surface rounded-2xl border border-surface hover:border-accent/40 transition-all duration-500 hover:shadow-[0_0_40px_rgba(63,162,169,0.1)]"
          >
            <!-- Accent Line -->
            <div class="absolute left-0 top-6 bottom-6 w-1 bg-gradient-to-b from-accent via-accent/50 to-transparent rounded-full opacity-60 group-hover:opacity-100 transition-opacity" />
            
            <!-- Header Row -->
            <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4 mb-6 pl-4">
              <div>
                <div class="flex items-center gap-3 mb-2">
                  <span class="inline-flex items-center px-3 py-1 text-xs font-medium bg-accent/10 text-accent rounded-full capitalize">
                    {exp.type}
                  </span>
                  <span class="text-secondary text-sm">
                    {exp.startDate} — {exp.endDate}
                  </span>
                </div>
                <h2 class="text-2xl font-bold text-primary mb-1 group-hover:text-accent transition-colors">
                  {exp.title}
                </h2>
                <p class="text-lg text-accent font-medium">
                  {exp.company}
                  <span class="text-secondary font-normal text-base"> · {exp.location}</span>
                </p>
              </div>
            </div>

            <!-- Overview -->
            {exp.overview && (
              <div class="pl-4 mb-6">
                <p class="text-secondary leading-relaxed text-base">
                  {exp.overview}
                </p>
              </div>
            )}

            <!-- Responsibilities -->
            <div class="pl-4 mb-6">
              <h3 class="text-xs font-semibold text-primary/70 uppercase tracking-widest mb-4">
                Key Responsibilities
              </h3>
              <div class="grid gap-3">
                {exp.description.map((item) => (
                  <div class="flex items-start gap-3 group/item">
                    <span class="flex-shrink-0 w-6 h-6 flex items-center justify-center rounded-full bg-accent/10 text-accent text-xs mt-0.5">
                      ✓
                    </span>
                    <span class="text-secondary group-hover/item:text-primary transition-colors">
                      {item}
                    </span>
                  </div>
                ))}
              </div>
            </div>

            <!-- Technologies -->
            {exp.techStack && (
              <div class="pl-4 mb-4">
                <h3 class="text-xs font-semibold text-primary/70 uppercase tracking-widest mb-3">
                  Technologies Used
                </h3>
                <div class="flex flex-wrap gap-2">
                  {exp.techStack.map((tech) => (
                    <span class="px-3 py-1.5 text-sm bg-background text-secondary rounded-lg border border-surface group-hover:border-accent/20 transition-colors">
                      {tech}
                    </span>
                  ))}
                </div>
              </div>
            )}

            <!-- NDA Note -->
            {exp.note && (
              <div class="pl-4 pt-4 mt-4 border-t border-surface/50">
                <p class="flex items-center gap-2 text-sm text-secondary/60 italic">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                  </svg>
                  {exp.note}
                </p>
              </div>
            )}
          </article>
        ))}
      </div>

      <!-- Footer CTA -->
      <div class="mt-16 p-8 bg-gradient-to-br from-surface to-background rounded-2xl border border-surface text-center">
        <p class="text-secondary mb-4">
          Want to know more about my experience?
        </p>
        <div class="flex flex-wrap items-center justify-center gap-4">
          <a 
            href="https://www.linkedin.com/in/mun33b-exe/" 
            target="_blank" 
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-5 py-2.5 bg-accent text-background font-medium rounded-lg hover:bg-accent/90 transition-all duration-300"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
            View LinkedIn
          </a>
          <a 
            href="/assets/cv.pdf" 
            target="_blank"
            class="inline-flex items-center gap-2 px-5 py-2.5 bg-button text-primary font-medium rounded-lg hover:bg-surface border border-surface transition-all duration-300"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            Download CV
          </a>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</BaseLayout>
